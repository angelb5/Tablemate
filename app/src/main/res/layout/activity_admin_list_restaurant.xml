<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminListRestaurantActivity">
    <LinearLayout
        android:id="@+id/llAdminCreateRestaurantTitle"
        android:elevation="4dp"
        style="@style/LinearLayoutTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/ibAdminListRestaurantBack"
            android:background="?actionBarItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:onClick="goBackToPreviousActivity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/button_back"
            android:clickable="true"/>
        <EditText
            android:id="@+id/etAdminListRestaurantSearch"
            style="@style/InputGrey"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Buscar por nombre"
            android:layout_marginVertical="12dp"
            android:drawableEnd="@drawable/inputicon_search"/>
        <ImageButton
            android:id="@+id/ibAdminListRestaurantFilter"
            android:background="?actionBarItemBackground"
            android:paddingEnd="16dp"
            android:paddingStart="12dp"
            android:onClick="showFilters"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_filter_24"
            android:clickable="true"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llAdminCreateRestaurantTitle">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerAdminListRestaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:duration="800">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/card_restaurant_placeholder" />
                <include layout="@layout/card_restaurant_placeholder" />
                <include layout="@layout/card_restaurant_placeholder" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAdminListRestaurant"
            tools:listitem="@layout/card_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="0"/>
        <LinearLayout
            android:id="@+id/llAdminListRestaurantEmptyView"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/empty_search"/>
            <TextView
                style="@style/DarkMediumSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="No encontramos resultados para tu búsqueda"
                android:layout_marginBottom="8dp"/>
            <TextView
                style="@style/LightRegular14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prueba con otros términos de búsqueda"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>