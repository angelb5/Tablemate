<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="16dp"
    android:layout_marginHorizontal="16dp"
    style="@style/WhiteCard"
    app:cardElevation="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Media -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="112dp">

            <ImageView
                android:id="@+id/ivRestaurantCardFoto"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:scaleType="center"
                android:background="@color/grey_light"
                android:src="@drawable/ic_image_placeholder_48" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvRestaurantCardDistance"
                app:cardElevation="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/tvRestaurantCardDistance"
                    style="@style/LightMedium14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp"
                    android:text="0.0 km" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingVertical="2dp"
                    android:paddingHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvRestaurantCardRating"
                        style="@style/LightMedium14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:layout_marginEnd="4dp"
                        android:text="--" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_14_grey"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingHorizontal="20dp">
            <!-- Title, secondary and supporting text -->
            <View
                android:layout_width="160dp"
                android:background="@color/grey"
                android:layout_height="18dp"/>
            <View
                android:background="@color/grey_light"
                android:layout_width="100dp"
                android:layout_height="14dp"
                android:layout_marginVertical="2dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>