<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingVertical="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginEnd="8dp"
            android:src="@drawable/pfp01"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/font_light"
                android:text="Nombre"
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvReviewRating"
                    style="@style/DarkRegular14"
                    android:text="-"
                    android:layout_marginEnd="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_14_grey"
                    android:layout_marginEnd="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/font_light"
        android:layout_marginBottom="8dp"
        android:text="Detalle Reseña"
        android:layout_width="match_parent"
        android:layout_height="14dp"/>
    <View
        android:background="@color/font_light"
        android:layout_marginBottom="8dp"
        android:text="Detalle Reseña"
        android:layout_width="240dp"
        android:layout_height="14dp"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginBottom="8dp"
        app:shapeAppearanceOverlay="@style/roundedCornersImageView"
        android:background="@color/white"
        android:scaleType="center"
        android:src="@drawable/ic_image_placeholder_48"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
</LinearLayout>