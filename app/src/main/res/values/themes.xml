    <!-- Estilos btn -->
    <style name="BtnPrimary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="enforceMaterialTheme">false</item>
        <item name="fontFamily">@font/aeonik_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="enforceTextAppearance">false</item>
        <item name="backgroundTint">@color/orange_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">48dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

