        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/aeonik_regular</item>
        <item name="android:windowBackground">@color/grey_light</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Tablemate.Starting" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

