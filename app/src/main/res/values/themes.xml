        <item name="itemPaddingBottom">12dp</item>
        <item name="itemIconSize">22dp</item>
        <item name="itemIconTint">@color/nav_icon_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextColor">@color/nav_icon_color</item>
        <item name="itemTextAppearanceInactive">@style/OrangeMedium12</item>
        <item name="itemTextAppearanceActive">@style/OrangeMedium12</item>
        <item name="itemActiveIndicatorStyle">@style/Tablemate.Custom.Indicator</item>
    </style>

